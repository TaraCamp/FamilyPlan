<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1"
    android:orientation="vertical"
    tools:context="de.taracamp.familyplan.MainActivity">

    <!--ROW-->
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:background="@color/tran_colorBlue"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/button_menu_task">

            <ImageView
                android:id="@+id/categoria_image_12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/tasks"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoria_image_12"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app"
                android:gravity="center"
                android:text="Aufgaben"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>


        <RelativeLayout
            android:background="@color/tran_colorDark"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/button_menu_account">

            <ImageView
                android:id="@+id/categoria_image_22"
                android:src="@drawable/account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoria_image_22"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app"
                android:gravity="center"
                android:text="Profil"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

    <!--ROW-->
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:background="@color/tran_colorGreen"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/button_menu_3">

            <ImageView
                android:id="@+id/categoria_image_13"
                android:src="@drawable/calendar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoria_image_13"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app"
                android:gravity="center"
                android:text="Familien Kalender"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

    <!--ROW-->
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:background="@color/tran_colorRed"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/button_menu_5">

            <ImageView
                android:id="@+id/categoria_image_1"
                android:src="@drawable/settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoria_image_1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app"
                android:gravity="center"
                android:text="Einstellungen"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/button_menu_logout"
            android:background="@color/tran_colorYellow"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:id="@+id/categoria_image_2"
                android:src="@drawable/exit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoria_image_2"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app"
                android:gravity="center"
                android:text="Beenden"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>