<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/yellow_backgroundcolor"
                android:padding="15dp"
                tools:context=".Task.detail.TaskActivity">

    <LinearLayout
        android:id="@+id/task_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/task_tabs_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_taskdetail_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/app"
                android:padding="15dp"
                android:text="Detail"
                android:textColor="@color/textTabBright"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textview_taskdetail_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/app"
                android:padding="15dp"
                android:text="Anhang"
                android:textColor="@color/textTabLight"
                android:textSize="14sp"/>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    </LinearLayout>

</RelativeLayout>