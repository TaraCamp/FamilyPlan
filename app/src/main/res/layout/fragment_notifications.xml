<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="de.taracamp.familyplan.Account.notification.NotificationsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_background"
        android:padding="15dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_notification_members"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearlayout_notification_noFamily"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView_notification_nofamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/app"
                android:gravity="center"
                android:padding="15dp"
                android:text="Noch keine Familie"
                android:textSize="20dp"
                android:visibility="visible"/>

            <Button
                android:id="@+id/button_notification_addFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/accept_color_button"
                android:fontFamily="@font/app"
                android:text="Familie Beitreten"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
