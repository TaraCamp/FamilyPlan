<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

                <ImageView
                    android:id="@+id/imageView_eventItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:maxWidth="25dp"
                    android:maxHeight="25dp"
                    android:padding="20dp"
                    android:paddingRight="40dp"
                    android:src="@drawable/ic_action_open"/>

                <TextView
                    android:id="@+id/item_event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/imageView_eventItem"
                    android:text="Title"/>

                <TextView
                    android:id="@+id/item_event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_event_name"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/imageView_eventItem"
                    android:text="Description"/>

                <TextView
                    android:id="@+id/item_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/item_event_description"
                    android:layout_toRightOf="@+id/imageView_eventItem"
                    android:text="Datum"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>